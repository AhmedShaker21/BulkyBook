@model IEnumerable<dynamic>

<h2>إدارة المستخدمين</h2>

<a class="btn btn-primary mb-3" asp-action="Create">إنشاء مستخدم</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>الاسم</th>
            <th>الإيميل</th>
            <th>الدور</th>
            <th>القطاع</th>
            <th>الإدارة</th>
            <th>تحكم</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.Name</td>
                <td>@u.Email</td>
                <td>@u.Role</td>
                <td>@u.Sector</td>
                <td>@u.Department</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@u.Id" class="btn btn-warning btn-sm">تعديل</a>
                    <a asp-action="Delete" asp-route-id="@u.Id" class="btn btn-danger btn-sm">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>
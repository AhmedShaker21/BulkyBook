
@model IEnumerable<BulkyBook.Models.Department>
<form method="get" class="mb-3">
    <div class="row">
        <div class="col-md-4">
            <input type="text"
                   name="searchSector"
                   class="form-control"
                   placeholder="ابحث باسم القطاع..."
                   value="@Context.Request.Query["searchSector"]" />

        </div>
        <div class="col-md-2">
            <button class="btn btn-primary w-100">بحث</button>
        </div>
    </div>
</form>

<div class="card shadow p-4">
    <h3 class="mb-4">الإدارات</h3>

    <div class="mb-3 text-end">
        <a asp-action="Create" class="btn btn-primary">
            إضافة إدارة جديدة
        </a>
    </div>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>الاسم</th>
                <th>الوصف</th>
                <th>القطاع</th>
                <th style="width:150px;">الإجراءات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Sector.Name</td>

                    <td>
                        <a asp-area="Admin"
                           asp-controller="Department"
                           asp-action="Edit"
                           asp-route-id="@item.Id"
                           class="btn btn-warning btn-sm">
                            تعديل
                        </a>

                       
                        <a asp-area="Admin"
                           asp-controller="Department"
                           asp-action="Delete"
                           asp-route-id="@item.Id"
                           class="btn btn-danger btn-sm">
                            حذف
                        </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>

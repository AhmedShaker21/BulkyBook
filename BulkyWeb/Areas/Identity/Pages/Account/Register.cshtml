@page
@model RegisterModel
@using BulkyBook.Utility

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary text-white py-3">
        <h2 class="text-center">إنشاء حساب جديد</h2>
    </div>

    <div class="card-body p-4">
        <form method="post" class="row">

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Email -->
            <div class="form-floating mb-3 col-md-12">
                <input asp-for="Input.Email" class="form-control" placeholder="email@example.com" />
                <label asp-for="Input.Email" class="text-muted">البريد الإلكتروني</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Name -->
            <div class="form-floating mb-3 col-md-6">
                <input asp-for="Input.Name" class="form-control" placeholder="الاسم الكامل" />
                <label asp-for="Input.Name" class="text-muted">الاسم الكامل</label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>

            <!-- Phone -->
            <div class="form-floating mb-3 col-md-6">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="01123456789" />
                <label asp-for="Input.PhoneNumber" class="text-muted">رقم الهاتف</label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <!-- Password -->
            <div class="form-floating mb-3 col-md-6">
                <input asp-for="Input.Password" type="password" class="form-control" placeholder="كلمة المرور" />
                <label asp-for="Input.Password">كلمة المرور</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <!-- Confirm Password -->
            <div class="form-floating mb-3 col-md-6">
                <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="تأكيد كلمة المرور" />
                <label asp-for="Input.ConfirmPassword">تأكيد كلمة المرور</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- Role -->
            @if (User.IsInRole("Chairman"))
            {
                <div class="form-floating mb-3 col-md-12">
                    <select asp-for="Input.Role" asp-items="Model.Input.RoleList" class="form-select">
                        <option disabled selected>اختيار الدور</option>
                    </select>
                    <label asp-for="Input.Role">الدور الوظيفي</label>
                </div>
            }

            <div class="col-12 mt-3">
                <button type="submit" class="btn btn-primary w-100 py-2">تسجيل</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

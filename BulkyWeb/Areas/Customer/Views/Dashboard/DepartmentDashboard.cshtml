@model BulkyBook.Models.ViewModels.DepartmentDashboardVM

<h2 class="mb-4">لوحة التحكم - إدارة @Model.DepartmentName</h2>

<div class="row">

    <!-- Employees -->
    <div class="col-md-3 mb-3">
        <div class="card shadow p-3 text-center" style="border-top:4px solid #007acc">
            <h6>عدد الموظفين</h6>
            <h2>@Model.EmployeesCount</h2>
        </div>
    </div>

    <!-- Inbox -->
    <div class="col-md-3 mb-3">
        <div class="card shadow p-3 text-center" style="border-top:4px solid #28a745">
            <h6>الوارد إلى الإدارة</h6>
            <h2>@Model.Inbox</h2>
        </div>
    </div>

    <!-- Outbox -->
    <div class="col-md-3 mb-3">
        <div class="card shadow p-3 text-center" style="border-top:4px solid #ffc107">
            <h6>الصادر من الإدارة</h6>
            <h2>@Model.Outbox</h2>
        </div>
    </div>

    <!-- Reviews -->
    <div class="col-md-3 mb-3">
        <div class="card shadow p-3 text-center" style="border-top:4px solid #005f99">
            <h6>مذكرات تم مراجعتها</h6>
            <h2>@Model.ReviewCount</h2>
        </div>
    </div>
</div>

<div class="row">

    <!-- Approved -->
    <div class="col-md-3 mb-3">
        <div class="card shadow p-3 text-center" style="border-top:4px solid #28a745">
            <h6>معتمدة</h6>
            <h2>@Model.ApprovedCount</h2>
        </div>
    </div>

    <!-- Rejected -->
    <div class="col-md-3 mb-3">
        <div class="card shadow p-3 text-center" style="border-top:4px solid #dc3545">
            <h6>مرفوضة</h6>
            <h2>@Model.RejectedCount</h2>
        </div>
    </div>

</div>

<hr />

<h4 class="mt-4">أحدث 5 مذكرات واردة للإدارة</h4>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>العنوان</th>
            <th>من</th>
            <th>إلى</th>
            <th>الحالة</th>
            <th>التاريخ</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model.LatestMemos)
        {
            <tr>
                <td>@m.Subject</td>
                <td>@m.FromDepartment?.Name</td>
                <td>@m.ToDepartment?.Name</td>
                <td>@m.Status</td>
                <td>@m.CreatedAt.ToString("yyyy/MM/dd")</td>
            </tr>
        }
    </tbody>
</table>

@model BulkyBook.Models.ViewModels.EmployeeDashboardVM

<h2 class="mb-4">لوحة التحكم - الموظف</h2>

<div class="row">

    <!-- Sent -->
    <div class="col-md-4 mb-3">
        <div class="card shadow p-3 text-center" style="border-top:4px solid #007acc">
            <h6>إجمالي المذكرات المرسلة</h6>
            <h2>@Model.Sent</h2>
        </div>
    </div>

    <!-- Approved -->
    <div class="col-md-4 mb-3">
        <div class="card shadow p-3 text-center" style="border-top:4px solid #28a745">
            <h6>المعتمدة</h6>
            <h2>@Model.Approved</h2>
        </div>
    </div>

    <!-- Rejected -->
    <div class="col-md-4 mb-3">
        <div class="card shadow p-3 text-center" style="border-top:4px solid #dc3545">
            <h6>المرفوضة</h6>
            <h2>@Model.Rejected</h2>
        </div>
    </div>

</div>

<hr />

<h4 class="mt-4">أحدث 5 مذكرات قمت بإرسالها</h4>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>العنوان</th>
            <th>إلى</th>
            <th>الحالة</th>
            <th>التاريخ</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model.LatestMemos)
        {
            <tr>
                <td>@m.Subject</td>
                <td>@m.ToDepartment?.Name</td>
                <td>@m.Status</td>
                <td>@m.CreatedAt.ToString("yyyy/MM/dd")</td>
            </tr>
        }
    </tbody>
</table>

@model IEnumerable<BulkyBook.Models.Memo>

<h2 class="mb-3">الصادر</h2>

<table class="table table-bordered table-striped">

    <thead>
        <tr>
            <th>العنوان</th>
            <th>إلى</th>
            <th>الحالة</th>
            <th>التاريخ</th>
            <th>عرض</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.Subject</td>

                <td>@m.ToDepartment?.Name</td>

                <td>@await Html.PartialAsync("_MemoStatusBadge", m.Status)</td>

                <td>@m.CreatedAt.ToString("yyyy/MM/dd")</td>

                <td>
                    <a asp-action="Details" asp-route-id="@m.Id" class="btn btn-info btn-sm">عرض</a>
                </td>
            </tr>
        }
    </tbody>

</table>
